{% extends "layout.html.twig" %}

{% set active='home' %}

{% block page_title %}
    Accueil
{% endblock %}

{% block content %}


    <!--colleft-->
    <div class="container">

        <section class="bg-light text-center container  border border-success py-4 mt-4 mb-4">
            <h3 class="text-success font-weight-bold">Cliquer c'est manger</h3>
            <p>Faites-vous livrer les meilleurs restos près de chez vous avec Fais Pas La Queue.</p>

            <div class="input-group mt-3 mb-3" id="custom-search-input">
                <img class="mr-1" src="{{ asset('images/logo.png') }}" alt="logo" width="38" height="38">
                <span class="input-group-btn">
                    <i class="mt-2 fas fa-map-marker-alt"></i>
                </span>
                <input class="form-control" type="text" placeholder="Entrez votre adresse" aria-label="Search">

                <div class="input-group-append">
                    <button class="btn  btn-success" type="button" id="button-addon2"><i class="fas fa-search"></i> J'ai Faim</button>
                </div>
            </div>
        </section>

        <section class="container mb-5">
            <style type="text/css" id="slider-css"></style>
            <div class="spe-cor">
                <div class="container">
                    {% for message in app.flashes('notice_inscription') %}
                        <div class="alert alert-info">
                            {{ message }}
                        </div>
                    {% endfor %}
                    <h2 class="text-warning">Restaurants d'Or <i class="fas fa-crown"></i></h2>
                    <div class="row">

                        <div id="slider-1" class="carousel carousel-by-item slide" data-ride="carousel">
                            <div class="carousel-inner" role="listbox">
                                {% for restaurant in restaurants %}
                                    {#loop.index0 	permet  l'itération actuel de la boucle (l'index commence à 0)#}
                                    <div data-slide-to="{{ loop.index0 }}"  class="carousel-item {% if loop.index0 == 0 %}active{% endif %}" >

                                        <div class="col-lg-4 col-md-4 col-sm-4 col-4">
                                            <div class="card" style="width: 20rem;" >
                                                <img class="d-block card-img-top img-fluid" src="{{ asset('images/product/'~restaurant.photo) }}" alt="First slide">
                                                <div class="card-body">
                                                    <h5 class="card-title">{{restaurant.nom}}</h5>
                                                    <address class="h6">
                                                        <small>
                                                            {{restaurant.adresse}}<br>
                                                            {{restaurant.codePostal}} {{restaurant.ville}} <br>
                                                        </small>
                                                    </address>
                                                    <p class="card-text">{{restaurant.description}}</p>
                                                    {#STAR RATING#}
                                                    <div class="container mb-2 text-center">
                                                        <span class="fa fa-star checked"></span>
                                                        <span class="fa fa-star checked"></span>
                                                        <span class="fa fa-star checked"></span>
                                                        <span class="fa fa-star"></span>
                                                        <span class="fa fa-star"></span>
                                                    </div>
                                                    <div class="text-center">
                                                        <a href="#" class="btn btn-success">Je mange</a>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                {% endfor %}
                            </div>
                            <a class="carousel-control-prev" href="#slider-1" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#slider-1" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section>

        </section>

    </div>

{% endblock %}


