{% extends "layout.html.twig" %}
{% set active='menu' %}
{% block page_title %}
    menu restaurants
{% endblock %}

{% block content %}
    {% for restaurant in restaurants %}
    <section class="container">
        <div class="row">
            <div class="col-3">
                <img src="{{ asset('images/product/'~restaurant.photo) }}" alt="..." class="img-thumbnail">
            </div>
            <div class="col-4">

                {#si restaurant d'or rajouter la couronne#}
                <h1>{{restaurant.nom}}<i class="text-warning fas fa-crown"></i></h1>
                {#Rajouter une condition Si le restaurant est fermé, remplacer le
                par "fermé - ouvre à ..:.." et le point devient rouge#}
                <p><i class="fas fa-circle text-success"></i>Ouverture {{restaurant.horaires}}</p>


                <p>Type: {{restaurant.type.nom}}</p>
            </div>
            <div class="col-5">
                <ul class="mt-5">
                    <li class="list-unstyled "><i class="fas fa-clock"></i>45 à 60 min</li>
                    <li class="list-unstyled mt-3"><i class="far fa-money-bill-alt"></i>Comm. min. {{restaurant.commandeMin}} €</li>
                    <li class="list-unstyled mt-3"><i class="fas fa-motorcycle"></i>
                        {% if restaurant.prixLivraison == 0 %}
                            Livraison Gratuite
                        {% else %}
                            Livraison {{ restaurant.prixLivraison }} €
                        {% endif %}
                    </li>
                </ul>

            </div>
        </div> <hr>
    </section>

    <section class="container mb-3">


        <div id="wrapper" class="mb-3">

            <!-- Sidebar -->
            <div id="sidebar-wrapper" class="mr-2 mt-4">

                <div class="card bg-light">
                    <div class="card-header">
                        <h4>Votre panier</h4>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">

                            <div class="form-check mb-3 ">
                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1"
                                       value="option1">
                                <label class="form-check-label" for="inlineRadio1">Livraison</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2"
                                       value="option2">
                                <label class="form-check-label" for="inlineRadio2">A Emporter</label>
                            </div>
                        </li>
                        {# lorsque on ajoute un produit, le texte en rouge est remplacé
                        par les article ajouté au pannier#}
                        <li class="list-group-item text-danger"><i class="fas fa-exclamation-triangle"></i> Aucun
                            produit dans le panier
                        </li>
                        <li class="list-group-item"><div class="form-group">

                                <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Ajouter un commentaire" rows="3"></textarea>
                            </div></li>
                    </ul>
                </div>
                <button type="button" class=" mt-3 btn btn-light btn-lg border-dark btn-block">Commander    <i class="fas fa-angle-right "></i></button>
            </div>
            <!-- /#sidebar-wrapper -->

            <!-- Page Content -->
            <div id="page-content-wrapper">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <h1 class="">Menu</h1>
                            <div id="accordion" role="tablist">
                                <div class="card">
                                    <div class="card-header" role="tab" id="headingOne">
                                        <h5 class="mb-0">
                                            <a data-toggle="collapse" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                                Entrées
                                            </a>
                                        </h5>
                                    </div>
                                    <div id="collapseOne" class="collapse show" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion">
                                        <div class="card-body">
                                            {% for entree in restaurant.entrees %}
                                            <div class="row">
                                                <div class="col-8">
                                                    <p >{{ entree.nom }}</p>
                                                    <small>{{ entree.description }}</small>
                                                </div>
                                                <div class="col-2 float-right">
                                                    <p class="font-weight-bold">{{ entree.prix }} €</p>
                                                </div>
                                                <div class="col-2">

                                                    <button type="button" class="btn btn-outline-success float-right"><i class=" fas fa-plus"></i> </button>
                                                </div>
                                            </div><hr>
                                            {% endfor %}
                                            {#<button type="button" class="btn btn-outline-success btn-lg btn-block"><i class="float-left mt-1 fas fa-plus"></i> Ajouter au pannier</button>#}
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header" role="tab" id="headingTwo">
                                        <h5 class="mb-0">
                                            <a class="collapsed" data-toggle="collapse" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                                Menus
                                            </a>
                                        </h5>
                                    </div>
                                    <div id="collapseTwo" class="collapse" role="tabpanel" aria-labelledby="headingTwo" data-parent="#accordion">
                                        <div class="card-body">
                                            {% for menu in restaurant.menus %}
                                            <div class="row">
                                                <div class="col-8">
                                                    <p >{{ menu.nom }}</p>
                                                    <small>{{ menu.description }}</small>
                                                    <div class="mt-2">
                                                        <select class="custom-select" id="inputGroupSelect01">
                                                            <option selected>Boisson...</option>
                                                            <option value="1">Coca-cola</option>
                                                            <option value="2">Fanta</option>
                                                            <option value="3">Tropico</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-2 float-right">
                                                    <p class="font-weight-bold">{{ menu.prix }} €</p>
                                                </div>
                                                <div class="col-2">

                                                    <button type="button" class="btn btn-outline-success float-right"><i class=" fas fa-plus"></i> </button>
                                                </div>
                                            </div><hr>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header" role="tab" id="headingThree">
                                        <h5 class="mb-0">
                                            <a class="collapsed" data-toggle="collapse" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                                Dessert
                                            </a>
                                        </h5>
                                    </div>
                                    <div id="collapseThree" class="collapse" role="tabpanel" aria-labelledby="headingThree" data-parent="#accordion">
                                        <div class="card-body">
                                            {% for dessert in restaurant.desserts %}
                                            <div class="row">
                                                <div class="col-8">
                                                    <p >{{ dessert.nom }}</p>
                                                    <small>{{ dessert.description }}</small>
                                                </div>
                                                <div class="col-2 float-right">
                                                    <p class="font-weight-bold">{{ dessert.prix }} €</p>
                                                </div>
                                                <div class="col-2">

                                                    <button type="button" class="btn btn-outline-success float-right"><i class=" fas fa-plus"></i> </button>
                                                </div>
                                            </div><hr>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header" role="tab" id="headingThree">
                                        <h5 class="mb-0">
                                            <a class="collapsed" data-toggle="collapse" href="#collapseFor" aria-expanded="false" aria-controls="collapseThree">
                                                Boissons
                                            </a>
                                        </h5>
                                    </div>
                                    <div id="collapseFor" class="collapse" role="tabpanel" aria-labelledby="headingFor" data-parent="#accordion">
                                        <div class="card-body">
                                            {% for boisson in restaurant.boissons %}
                                            <div class="row">
                                                <div class="col-8">
                                                    <p >{{ boisson.nom }}</p>
                                                    <small>{{ boisson.description }}</small>
                                                </div>
                                                <div class="col-2 float-right">
                                                    <p class="font-weight-bold">{{ boisson.prix }} €</p>
                                                </div>
                                                <div class="col-2">

                                                    <button type="button" class="btn btn-outline-success float-right"><i class=" fas fa-plus"></i> </button>
                                                </div>
                                            </div><hr>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /#page-content-wrapper -->

        </div>
    </section>
    {% endfor %}

{% endblock %}
