{% extends "layout.html.twig" %}
{% set active='menu' %}
{% block page_title %}
    menu restaurants
{% endblock %}

{% block content %}
    {% for restaurant in restaurants %}
    <section class="container">
        <div class="row">
            <div class="col-3">
                <img src="{{ asset('images/product/'~restaurant.photo) }}" alt="..." class="img-thumbnail">
            </div>
            <div class="col-4">

                {#si restaurant d'or rajouter la couronne#}
                <h1>{{restaurant.nom}}<i class="text-warning fas fa-crown"></i></h1>
                {#Rajouter une condition Si le restaurant est fermé, remplacer le
                par "fermé - ouvre à ..:.." et le point devient rouge#}
                <p><i class="fas fa-circle text-success"></i>Ouverture {{restaurant.horaires}}</p>


                <p>Type: {{restaurant.type.nom}}</p>
            </div>
            <div class="col-5">
                <ul class="mt-5">
                    <li class="list-unstyled "><i class="fas fa-clock"></i>45 à 60 min</li>
                    <li class="list-unstyled mt-3"><i class="far fa-money-bill-alt"></i>Comm. min. {{restaurant.commandeMin}} €</li>
                    <li class="list-unstyled mt-3"><i class="fas fa-motorcycle"></i>
                        {% if restaurant.prixLivraison == 0 %}
                            Livraison Gratuite
                        {% else %}
                            Livraison {{ restaurant.prixLivraison }} €
                        {% endif %}
                    </li>
                </ul>

            </div>
        </div> <hr>
    </section>

    <section class="container mb-3">
        <div id="wrapper" class="mb-3 dropdown">
            <!-- Page Content -->
                    <div class="row">
                        <div class="col-12">
                            <h1 class="">Menu</h1>
                            <div id="accordion" role="tablist">
                                <div class="card">
                                    <div class="card-header" role="tab" id="headingOne">
                                        <h5 class="mb-0">
                                            <a data-toggle="collapse" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                                Entrées
                                            </a>
                                        </h5>
                                    </div>
                                    <div id="collapseOne" class="collapse show" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion">
                                        <div class="card-body">
                                            {% for entree in restaurant.entrees %}
                                            <div class="row">
                                                <div class="col-8">
                                                    <p >{{ entree.nom }}</p>
                                                    <small>{{ entree.description }}</small>
                                                </div>
                                                <div class="col-2 float-right">
                                                    <p class="font-weight-bold">{{ entree.prix }} €</p>
                                                </div>
                                                <div class="col-2">
                                                    <button type="button" data-name="Tempura_Crevette_x6" data-price="6.80" class="btn btn-outline-success add-to-cart float-right"><i class=" fas fa-plus"></i> </button>
                                                </div>
                                            </div><hr>
                                            {% endfor %}
                                            {#<button type="button" class="btn btn-outline-success btn-lg btn-block"><i class="float-left mt-1 fas fa-plus"></i> Ajouter au pannier</button>#}
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header" role="tab" id="headingTwo">
                                        <h5 class="mb-0">
                                            <a class="collapsed" data-toggle="collapse" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                                Menus
                                            </a>
                                        </h5>
                                    </div>
                                    <div id="collapseTwo" class="collapse" role="tabpanel" aria-labelledby="headingTwo" data-parent="#accordion">
                                        <div class="card-body">
                                            {% for menu in restaurant.menus %}
                                            <div class="row">
                                                <div class="col-8">
                                                    <p >{{ menu.nom }}</p>
                                                    <small>{{ menu.description }}</small>
                                                    <div class="mt-2">
                                                        <select class="custom-select" id="inputGroupSelect01">
                                                            <option selected>Boisson...</option>
                                                            <option value="1">Coca-cola</option>
                                                            <option value="2">Fanta</option>
                                                            <option value="3">Tropico</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-2 float-right">
                                                    <p class="font-weight-bold">{{ menu.prix }} €</p>
                                                </div>
                                                <div class="col-2">

                                                    <button type="button" class="btn btn-outline-success float-right"><i class=" fas fa-plus"></i> </button>
                                                </div>
                                            </div><hr>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header" role="tab" id="headingThree">
                                        <h5 class="mb-0">
                                            <a class="collapsed" data-toggle="collapse" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                                Dessert
                                            </a>
                                        </h5>
                                    </div>
                                    <div id="collapseThree" class="collapse" role="tabpanel" data-target="#headingThree" data-parent="#accordion">
                                        <div class="card-body">
                                            {% for dessert in restaurant.desserts %}
                                            <div class="row">
                                                <div class="col-8">
                                                    <p >{{ dessert.nom }}</p>
                                                    <small>{{ dessert.description }}</small>
                                                </div>
                                                <div class="col-2 float-right">
                                                    <p class="font-weight-bold">{{ dessert.prix }} €</p>
                                                </div>
                                                <div class="col-2">

                                                    <button type="button" class="btn btn-outline-success float-right"><i class=" fas fa-plus"></i> </button>
                                                </div>
                                            </div><hr>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header" role="tab" id="headingFour">
                                        <h5 class="mb-0">
                                            <a class="collapsed" data-toggle="collapse" href="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                                Boissons
                                            </a>
                                        </h5>
                                    </div>
                                    <div id="collapseFour" class="collapse" role="tabpanel" aria-labelledby="headingFour" data-parent="#accordion">
                                        <div class="card-body">
                                            {% for boisson in restaurant.boissons %}
                                            <div class="row">
                                                <div class="col-8">
                                                    <p >{{ boisson.nom }}</p>
                                                    <small>{{ boisson.description }}</small>
                                                </div>
                                                <div class="col-2 float-right">
                                                    <p class="font-weight-bold">{{ boisson.prix }} €</p>
                                                </div>
                                                <div class="col-2">

                                                    <button type="button" class="btn btn-outline-success float-right"><i class=" fas fa-plus"></i> </button>
                                                </div>
                                            </div><hr>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            <!-- /#page-content-wrapper -->
        </div>
    </section>
    {% endfor %}

{% endblock %}

{% block final_javascripts %}
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script
            src="http://code.jquery.com/jquery-3.3.1.js"
            integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
            crossorigin="anonymous"></script>
{% endblock %}
